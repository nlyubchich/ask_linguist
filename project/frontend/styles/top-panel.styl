.panel {
  border: 2px solid #228b22;
  background-color: #37a000;
  display: block;
  height: 43px;
  font-weight: bold;
  font-size: 20px;
}

.panel-item {
  display: inline-block;
  color: #fff;
  cursor: default;
}

.panel-item:hover {
  background-color: #228b22;
}

.left {
  float: left;
  padding: 10px 30px;
}

.logo {
  padding-right: 150px;
}

.menu {
  margin: 0;
}

.right {
  float: right;
  padding: 10px 40px;
}

.ddlist {
  display: none;
  position: absolute;
  list-style-type: none;
  border: 2px solid #228b22;
  background-color: #fff;
  margin-top: 5px;
  padding: 5px;
  color: #000;
  font-weight: normal;
}

.left:hover .ddlist {
  display: block;
}


.right:hover .ddlist {
  display: block;
}

.ddlist-user-settings {
  right: 10px;
}

